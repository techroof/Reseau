<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/sectionBgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/category_place_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/topText"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/category_place_holder"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"/>

    <View
        android:id="@+id/bottomText"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/category_place_holder"
        app:layout_constraintTop_toBottomOf="@id/topText"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/icon1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/category_place_holder"
            app:layout_constraintTop_toBottomOf="@id/icon1"
            app:layout_constraintStart_toStartOf="@id/icon1"
            app:layout_constraintEnd_toEndOf="@id/icon1"/>

        <View
            android:id="@+id/bottomText1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/category_place_holder"
            app:layout_constraintTop_toBottomOf="@id/topText1"
            app:layout_constraintStart_toStartOf="@id/icon1"
            app:layout_constraintEnd_toEndOf="@id/icon1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/icon3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/category_place_holder"
            app:layout_constraintTop_toBottomOf="@id/icon3"
            app:layout_constraintStart_toStartOf="@id/icon3"
            app:layout_constraintEnd_toEndOf="@id/icon3"/>

        <View
            android:id="@+id/bottomText3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/category_place_holder"
            app:layout_constraintTop_toBottomOf="@id/topText3"
            app:layout_constraintStart_toStartOf="@id/icon3"
            app:layout_constraintEnd_toEndOf="@id/icon3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
