<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp"
    android:background="@color/sectionBgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <View
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/category_place_holder_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/topText"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintStart_toEndOf="@id/icon"
        android:layout_height="15dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/category_place_holder"/>

    <View
        android:id="@+id/bottomText"
        android:layout_width="60dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/icon"
        android:layout_marginLeft="16dp"
        android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/icon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText2"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="@id/icon2"
            app:layout_constraintStart_toEndOf="@id/icon2"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

        <View
            android:id="@+id/bottomText2"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/topText2"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon2"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/icon3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText3"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="@id/icon3"
            app:layout_constraintStart_toEndOf="@id/icon3"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

        <View
            android:id="@+id/bottomText3"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/topText3"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon3"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/icon4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText4"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="@id/icon4"
            app:layout_constraintStart_toEndOf="@id/icon4"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

        <View
            android:id="@+id/bottomText4"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/topText4"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon4"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/icon5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText5"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="@id/icon5"
            app:layout_constraintStart_toEndOf="@id/icon5"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

        <View
            android:id="@+id/bottomText5"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/topText5"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon5"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cl_1"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/icon6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_place_holder_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/topText6"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="@id/icon6"
            app:layout_constraintStart_toEndOf="@id/icon6"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

        <View
            android:id="@+id/bottomText6"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/topText6"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon6"
            android:layout_marginLeft="16dp"
            android:background="@drawable/category_place_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
