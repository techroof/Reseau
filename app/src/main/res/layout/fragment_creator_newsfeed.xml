<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sectionBgColor"
    tools:context=".Creator.CreatorFragment.CreatorNewsfeedFragment">

    <EditText
        android:id="@+id/newsfeed_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:hint="What's in your mind?"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsfeed_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/newsfeed_et"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>