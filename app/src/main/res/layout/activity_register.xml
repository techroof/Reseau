<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Authentication.RegisterActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="25dp"
    android:paddingEnd="25dp">

    <ImageView
        android:id="@+id/reg_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/phone2"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Get Started!"
        app:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/headingColorDark"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/reg_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an account to get all features of Reseau"
        android:textColor="@color/lightTextColor"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="@color/golden"
        android:inputType="textCapWords"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/user_icon"
        android:background="@drawable/et_bg"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        />

    <EditText
        android:id="@+id/reg_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="@color/golden"
        android:inputType="textEmailAddress"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_fluent_mail_28_regular"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/username_et"
        />

    <EditText
        android:id="@+id/dob_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:padding="15dp"
        android:textColor="@color/golden"
        android:focusable="false"
        android:textSize="12sp"
        android:focusableInTouchMode="false"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_akar_icons_calendar"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/reg_email_et"
        />

    <EditText
        android:id="@+id/reg_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="@color/golden"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_akar_icons_lock_off"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dob_et"
        />

    <EditText
        android:id="@+id/confirm_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="@color/golden"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_akar_icons_lock_off"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/reg_password_et"
        />

    <Button
        android:id="@+id/create_acc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:background="@drawable/btn_bg"
        app:backgroundTint="@null"
        app:fontFamily="@font/inter_bold"
        android:textColor="@color/headingColorDark"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass_et"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_text"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/headingColorDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_acc_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>