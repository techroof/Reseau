<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/products_img"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/products_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toStartOf="@id/products_price"
        app:layout_constraintStart_toEndOf="@id/products_img"
        app:layout_constraintTop_toTopOf="@id/products_img"/>

    <TextView
        android:id="@+id/products_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$18.50"
        app:fontFamily="@font/inter_bold"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/products_img"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightTextColor2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>